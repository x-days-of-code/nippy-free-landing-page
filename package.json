{
  "name": "static-frontend-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for html and css",
  "main": "index.js",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "rm -r dev || true && parcel src/index.html --out-dir dev",
    "build": "rm -r public || true && parcel build src/index.html --out-dir public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poalrom/static-frontend-boilerplate.git"
  },
  "keywords": [
    "html-boilerplate",
    "frontend-boilerplate",
    "boilerplate",
    "css-boilerplate"
  ],
  "author": "Alex Popkov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/poalrom/static-frontend-boilerplate/issues"
  },
  "homepage": "https://github.com/poalrom/static-frontend-boilerplate#readme",
  "dependencies": {
    "reset.css": "2.0.2"
  },
  "devDependencies": {
    "husky": "2.4.0",
    "parcel-bundler": "1.12.3",
    "prettier": "1.17.1",
    "pretty-quick": "1.11.0"
  }
}
